<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="openai-shortcuts">
  <schema id="org.gnome.shell.extensions.openai-shortcuts" path="/org/gnome/shell/extensions/openai-shortcuts/">
    <!-- General Settings -->
    <key name="chatgpt-url" type="s">
      <default>'https://chat.openai.com'</default>
      <summary>ChatGPT URL</summary>
      <description>URL to open when clicking on the ChatGPT menu item</description>
    </key>

    <!-- API Settings -->
    <key name="openai-api-url" type="s">
      <default>'https://api.openai.com/v1/'</default>
      <summary>OpenAI API URL</summary>
      <description>Base URL for OpenAI API requests</description>
    </key>
    <key name="openai-api-token" type="s">
      <default>''</default>
      <summary>OpenAI API Token</summary>
      <description>API token for accessing OpenAI services</description>
    </key>
    <key name="openai-model" type="s">
      <default>'gpt-3.5-turbo'</default>
      <summary>OpenAI Model</summary>
      <description>The OpenAI model to use for API requests</description>
    </key>

    <!-- Notification Settings -->
    <key name="enable-notifications" type="b">
      <default>true</default>
      <summary>Enable Notifications</summary>
      <description>Whether to show notifications for OpenAI operations</description>
    </key>
    <key name="notification-title" type="s">
      <default>'OpenAI Shortcuts'</default>
      <summary>Notification Title</summary>
      <description>The title to use for notifications</description>
    </key>

    <!-- Logging Settings -->
    <key name="enable-api-error-logging" type="b">
      <default>true</default>
      <summary>Enable API Error Logging</summary>
      <description>Whether to log API errors for debugging purposes</description>
    </key>
    <key name="api-error-log-level" type="s">
      <default>'error'</default>
      <summary>API Error Log Level</summary>
      <description>The level of detail for API error logs (error, info, debug)</description>
    </key>

    <!-- Shortcut Settings -->
    <key name="custom-shortcuts" type="as">
      <default><![CDATA[[
        '{"name":"Translate","prefix":"translate: ","keybinding":"<Super>t"}',
        '{"name":"Improve","prefix":"improve: ","keybinding":"<Super>i"}'
      ]]]></default>
      <summary>Custom shortcuts</summary>
      <description>List of custom shortcuts to OpenAI services</description>
    </key>

    <!--
      Custom shortcut keybindings
      These keys are used to store the actual keybindings for custom shortcuts.
      They are referenced by index in the code (custom-shortcut-0, custom-shortcut-1, etc.)
      and correspond to the shortcuts defined in the custom-shortcuts key.
    -->
    <key name="custom-shortcut-0" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 0</summary>
      <description>Keyboard shortcut for custom shortcut 0</description>
    </key>
    <key name="custom-shortcut-1" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 1</summary>
      <description>Keyboard shortcut for custom shortcut 1</description>
    </key>
    <key name="custom-shortcut-2" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 2</summary>
      <description>Keyboard shortcut for custom shortcut 2</description>
    </key>
    <key name="custom-shortcut-3" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 3</summary>
      <description>Keyboard shortcut for custom shortcut 3</description>
    </key>
    <key name="custom-shortcut-4" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 4</summary>
      <description>Keyboard shortcut for custom shortcut 4</description>
    </key>
    <key name="custom-shortcut-5" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 5</summary>
      <description>Keyboard shortcut for custom shortcut 5</description>
    </key>
    <key name="custom-shortcut-6" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 6</summary>
      <description>Keyboard shortcut for custom shortcut 6</description>
    </key>
    <key name="custom-shortcut-7" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 7</summary>
      <description>Keyboard shortcut for custom shortcut 7</description>
    </key>
    <key name="custom-shortcut-8" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 8</summary>
      <description>Keyboard shortcut for custom shortcut 8</description>
    </key>
    <key name="custom-shortcut-9" type="as">
      <default>[]</default>
      <summary>Custom Shortcut 9</summary>
      <description>Keyboard shortcut for custom shortcut 9</description>
    </key>
  </schema>
</schemalist>
