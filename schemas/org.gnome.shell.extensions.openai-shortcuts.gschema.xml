<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="openai-shortcuts">
  <schema id="org.gnome.shell.extensions.openai-shortcuts" path="/org/gnome/shell/extensions/openai-shortcuts/">
    <key name="chatgpt-url" type="s">
      <default>'https://chat.openai.com'</default>
      <summary>ChatGPT URL</summary>
      <description>URL to open when clicking on the ChatGPT menu item</description>
    </key>
    <key name="custom-shortcuts" type="as">
      <default>[]</default>
      <summary>Custom shortcuts</summary>
      <description>List of custom shortcuts to OpenAI services</description>
    </key>
    <key name="openai-api-token" type="s">
      <default>''</default>
      <summary>OpenAI API Token</summary>
      <description>API token for accessing OpenAI services</description>
    </key>
    <key name="openai-model" type="s">
      <default>'gpt-3.5-turbo'</default>
      <summary>OpenAI Model</summary>
      <description>The OpenAI model to use for API requests</description>
    </key>
    <key name="enable-notifications" type="b">
      <default>true</default>
      <summary>Enable Notifications</summary>
      <description>Whether to show notifications for OpenAI operations</description>
    </key>
    <key name="notification-title" type="s">
      <default>'OpenAI Shortcuts'</default>
      <summary>Notification Title</summary>
      <description>The title to use for notifications</description>
    </key>
    <key name="shortcut1-prefix" type="s">
      <default>'translate: '</default>
      <summary>Shortcut 1 Prefix</summary>
      <description>Prefix to add to the API call for Shortcut 1</description>
    </key>
    <key name="shortcut2-prefix" type="s">
      <default>'improve: '</default>
      <summary>Shortcut 2 Prefix</summary>
      <description>Prefix to add to the API call for Shortcut 2</description>
    </key>
    <key name="shortcut1-keybinding" type="as">
      <default><![CDATA[['<Super>t']]]></default>
      <summary>Shortcut 1 Keybinding</summary>
      <description>Keyboard shortcut for Shortcut 1 (translate)</description>
    </key>
    <key name="shortcut2-keybinding" type="as">
      <default><![CDATA[['<Super>i']]]></default>
      <summary>Shortcut 2 Keybinding</summary>
      <description>Keyboard shortcut for Shortcut 2 (improve)</description>
    </key>
  </schema>
</schemalist>
